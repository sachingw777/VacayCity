<% include ../partials/header %>

    <div class="container">

        <header class="jumbotron">
            <div class="container">
                <h1>Sites Directory</h1>
                <p>View our handpicked sites from all over the world!</p>
                <p>
                   <a class="btn btn-primary btn-large" href="/sites/new">Add New Site</a> 
                </p>
            </div>
        </header>
        
      
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% sites.forEach(function(site){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= site.image %>">
                        <div class="caption">                
                            <h4>   <%= site.name %>  </h4>
                        </div>
                        <p>
                            <a href="/sites/<%= site._id%>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
   </div>

<% include ../partials/footer %>